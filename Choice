  <script>
    // íƒ­ ì „í™˜
    const tabs = document.querySelectorAll(".tab-btn");
    const contents = document.querySelectorAll(".tab-content");
    tabs.forEach(tab => {
      tab.addEventListener("click", () => {
        tabs.forEach(t => t.classList.remove("active"));
        contents.forEach(c => c.classList.remove("active"));
        tab.classList.add("active");
        document.getElementById(tab.dataset.target).classList.add("active");
      });
    });

    function summarizeZone(prefix, label) {
      const ids = Array.from(document.querySelectorAll(`#${prefix} input`)).map(el => el.id);
      const parts = [];

      ids.forEach(id => {
        const el = document.getElementById(id);
        if (!el) return;
        const value = parseInt(el.value);
        if (value > 0) {
          const name = el.previousElementSibling.textContent.replace(":", "");
          parts.push(`${name} ${value}EA`);
        }
      });

      const zoneText = parts.length ? `${label} : ${parts.join(", ")}` : `${label} : ì—†ìŒ`;
      document.getElementById(`summary-${prefix}`).innerText = zoneText;
      return parts.length ? zoneText : null;
    }

    function calculateCables() {
      const allInputs = document.querySelectorAll("input[type='number']");
      const cableSummary = {};

      allInputs.forEach(input => {
        const id = input.id;
        const count = parseInt(input.value) || 0;
        if (count > 0 && cableRules[id]) {
          const rule = cableRules[id];
          for (const [cable, qty] of Object.entries(rule)) {
            cableSummary[cable] = (cableSummary[cable] || 0) + (qty * count);
          }
        }
      });

      const output = Object.entries(cableSummary)
        .map(([cable, qty]) => `- ${cable}: ${qty}ê°œ`)
        .join("\n");

      document.getElementById("cable-summary-content").innerText = output || "ì•„ì§ ê³„ì‚°ëœ ì¼€ì´ë¸”ì´ ì—†ìŠµë‹ˆë‹¤.";
    }

    function generateSummary() {
      const zones = [
        { prefix: "pay", label: "ê²°ì œì¡´" },
        { prefix: "order", label: "ì˜¤ë”ì¡´" },
        { prefix: "kiosk", label: "í‚¤ì˜¤ìŠ¤í¬ì¡´" }
      ];

      const results = [];
      zones.forEach(z => {
        const line = summarizeZone(z.prefix, z.label);
        if (line) results.push(line);
      });

      document.getElementById("summary-content").innerText = results.join("\n") || "ì¥ë¹„ê°€ ì„ íƒë˜ì§€ ì•Šì•˜ìŠµë‹ˆë‹¤.";
      calculateCables();
    }

    function resetAll() {
      document.querySelectorAll("input[type='number']").forEach(input => input.value = 0);
      generateSummary();
    }
  </script>
